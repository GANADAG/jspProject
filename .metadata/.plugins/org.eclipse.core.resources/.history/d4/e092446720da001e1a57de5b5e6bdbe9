<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Diphylleia&family=Dongle&family=Noto+Sans+KR:wght@100..900&family=Orbit&family=Stylish&display=swap" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<title>Insert title here</title>
<style type="text/css">
	#show{
		margin-top: 30px;
		font-family:'dongle';
		font-size:1.5em;
	}
</style>

<script type="text/javascript">
	$(function(){
		$("#btnteam").click(function(){
			$.ajax({
				type:"get",
				url:"teamtoxml.jsp",
				dataType:"xml",
				success:function(res){
					var s="";
					$(res).find("team").each(function(i,ele){
						var n=$(ele);
						s+="<div class='alert alert-info' style='width:400px'>";
						s+="No. "+n.attr("num")+"<br>";
						s+="이름: "+n.find("name").text()+"<br>";
						s+="운전면허: "+n.find("driver").text()+"<br>";
						s+="주소: "+n.find("addr").text()+"<br>";
						s+="작성일: "+n.find("writeday").text();
						s+="</div>";
					
					});
					
					$("#show").html(s);
				}
			});
			
			$(function(){
				$("#btnfood").click(function(){
					$.ajax({
						type:"get",
						url:"foodtoxml.jsp",
						dataType:"xml",
						success:function(res){
							var f="";
							$(res).find("food").each(function(i,ele){
								var n=$(ele);
								f+="<div class='alert alert-info' style='width:400px'>";
								f+="음식이름: "+f.find("foodname").text()+"<br>";
								f+="음식사진: "+f.find("foodphoto").text()+"<br>";
								f+="가격: "+f.attr("price")+"<br>";
								f+="갯수: "+f.attr("cnt");
								f+="</div>";
							
							});
							
							$("#show").html(f);
						}
					});	
					
					})
				})
			})
		})
	
</script>
</head>
<body>
	
	<h2>xml db읽기</h2>
	<button type="button" class="btn btn-info" id="btnteam">teamtoxml.jsp읽기</button>
	
	<button type="button" class="btn btn-info" id="btnfood">foodtoxml.jsp읽기</button>
	<div id="show"></div>
	
</body>
</html>